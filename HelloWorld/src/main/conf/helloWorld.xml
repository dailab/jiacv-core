<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context definition for "example" DispatcherServlet.
  -->
<beans>

  <bean name="myPlatform" class="de.dailab.jiactng.agentcore.SimpleAgentNode">
    <property name="agents">
      <list>
        <ref bean="HelloWorldAgent1"/>
        <ref bean="HelloWorldAgent2"/>
        <ref bean="HelloWorldAgent3"/>
      </list>
    </property>
  </bean>


  <bean name="HelloWorldAgent1" class="de.dailab.jiactng.agentcore.Agent" singleton="false">
    <property name="memory"><ref bean="memory"/></property>
    <property name="execution"><ref bean="simpleExecCycle"/></property>
    <property name="adaptors">
      <list>
        <ref bean="helloBean"/>
      </list>
    </property>
  </bean>
  
  <bean name="HelloWorldAgent2" class="de.dailab.jiactng.agentcore.Agent" singleton="false">
    <property name="memory"><ref bean="memory"/></property>
    <property name="execution"><ref bean="simpleExecCycle"/></property>
    <property name="adaptors">
      <list>
        <ref bean="helloBean"/>
      </list>
    </property>
  </bean>
  
  <bean name="HelloWorldAgent3" class="de.dailab.jiactng.agentcore.Agent" singleton="false">
    <property name="memory"><ref bean="memory"/></property>
    <property name="execution"><ref bean="simpleExecCycle"/></property>
    <property name="adaptors">
      <list>
        <ref bean="helloBean"/>
      </list>
    </property>
  </bean>    

  <!--bean name="Agent2" class="de.dailab.jiactng.agentcore.Agent">
    <property name="memory"><ref bean="memory"/></property>
    <property name="adaptors">
      <list>
        <ref bean="pongPing"/>
      </list>
    </property>
  </bean-->

  <bean name="memory" class="de.dailab.jiactng.agentcore.knowledge.Memory" singleton="false">
    <!--property name="timeOut" value="-1"/-->
  </bean>

  <bean name="helloBean" class="de.dailab.jiactng.examples.helloWorld.HelloBean" singleton="false">
  </bean>

  <bean name="simpleExecCycle" class="de.dailab.jiactng.agentcore.SimpleExecutionCycle" singleton="false">
  </bean>

</beans>
