<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context definition for "example" DispatcherServlet.
  -->
<beans>

  <import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
  <import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

  <bean name="myPlatform" parent="Platform">
    <property name="agents">
      <list>
        <ref bean="HelloWorldAgent"/>
        <ref bean="HelloWorldAgent"/>
        <ref bean="HelloWorldAgent"/>
      </list>
    </property>
  </bean>

  <bean name="HelloWorldAgent" parent="SimpleAgent" singleton="false">
    <property name="agentBeans">
      <list>
        <ref bean="helloBean"/>
      </list>
    </property>
  </bean>

  <bean name="helloBean" class="de.dailab.jiactng.examples.helloWorld.HelloBean" singleton="false">
    <property name="logLevel" value="INFO"/>
  </bean>

</beans>
