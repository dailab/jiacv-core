<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context definition for "example" DispatcherServlet.
  -->
<beans>

  <bean name="myPlatform" class="de.dailab.jiactng.agentcore.SimpleAgentNode">
    <property name="agents">
      <list>
        <ref bean="LocalPingPongAgent"/>
      </list>
    </property>
  </bean>

  <bean name="LocalPingPongAgent" class="de.dailab.jiactng.agentcore.Agent">
    <property name="memory"><ref bean="memory"/></property>
    <property name="execution"><ref bean="simpleExecCycle"/></property>
    <property name="agentBeans">
      <list>
        <ref bean="pingpong"/>
        <ref bean="pongping"/>
        <ref bean="monitor"/>
      </list>
    </property>
  </bean>

  <!--bean name="Agent2" class="de.dailab.jiactng.agentcore.Agent">
    <property name="memory"><ref bean="memory"/></property>
    <property name="agentBeans">
      <list>
        <ref bean="pongPing"/>
      </list>
    </property>
  </bean-->

  <bean name="memory" class="de.dailab.jiactng.agentcore.knowledge.Memory" singleton="false">
    <!--property name="timeOut" value="-1"/-->
  </bean>

  <bean name="monitor" class="de.dailab.jiactng.agentcore.knowledge.MemoryMonitor" singleton="false">
  </bean>

  <bean name="pingpong" class="de.dailab.jiactng.examples.pingPong.PingPongBean" singleton="false">
  </bean>

  <bean name="pongping" class="de.dailab.jiactng.examples.pingPong.PongPingBean" singleton="false">
  </bean>
  
  <bean name="simpleExecCycle" class="de.dailab.jiactng.agentcore.SimpleExecutionCycle" singleton="false">
  </bean>

</beans>
