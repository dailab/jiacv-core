<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentBeans.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/JMSMessaging.xml" />

	<bean name="myPlatform" parent="NodeWithJMX">
		<property name="agents">
			<list>
				<ref bean="LocalPingPongAgent" />
			</list>
		</property>
	</bean>

	<bean name="LocalPingPongAgent" parent="SimpleAgent">
		<property name="agentBeans">
			<list>
				<ref bean="pingpong" />
				<ref bean="pongping" />
			</list>
		</property>
	</bean>

	<bean name="pingpong" class="de.dailab.jiactng.examples.pingPong.PingPongBean"
		singleton="false">
		<property name="executionInterval" value="1000" />
	</bean>

	<bean name="pongping" class="de.dailab.jiactng.examples.pingPong.PongPingBean"
		singleton="false">
		<property name="executionInterval" value="1000" />
	</bean>

</beans>
