<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>de.dailab</groupId>
		<artifactId>jiactng</artifactId>
		<version>5.1.0-SNAPSHOT</version>
		</parent>
	
	<groupId>de.dailab.jiactng</groupId>
	<artifactId>agentCore</artifactId>
	<packaging>jar</packaging>
	<name>Agent Core</name>
	
	
	<dependencies>
		<dependency>
			<groupId>de.dailab.jiactng</groupId>
			<artifactId>agentCoreAPI</artifactId>
			<version>5.1.0-SNAPSHOT</version>
			</dependency>
		
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-core</artifactId>
			<version>2.0.6</version>
			</dependency>
		
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-context</artifactId>
			<version>2.0.6</version>
			</dependency>
		
		<dependency>
			<groupId>de.dailab.jiac.net</groupId>
			<artifactId>gateway</artifactId>
			<version>5.1.0-SNAPSHOT</version>
			</dependency>
		
		<!-- only necessary for JMX-Webservice connector, will only be needed in Projects -->
		<!--dependency> 
		 <groupId>jsr262-ri</groupId>
		 <artifactId>jmxws</artifactId>
		 <version>20060512</version>
		 </dependency-->
		
		<!-- needed for NodeConfigurationMonitorBean -->
		<dependency>
			<groupId>org.jdom</groupId>
			<artifactId>jdom</artifactId>
			<version>1.1</version>
			</dependency>
		
		</dependencies>
	
	<build>
		<!--		<resources>
		 <resource>
		 <directory>.</directory>
		 </resource>
		 </resources>
		 -->
		<plugins>
	      	<plugin>
	        	<artifactId>maven-antrun-plugin</artifactId>
	        	<executions>
	          		<execution>
	            		<phase>generate-sources</phase>
	            		<configuration>
							<tasks>
								<tstamp><format property="build.date" pattern="dd.MM.yyyy HH:mm:ss" locale="de" /></tstamp>
								<echo append="false" file="${basedir}/src/main/java/de/dailab/jiactng/Version.java">
									/* Do not edit this file, because it is generated by maven plugin!!! */
									package de.dailab.jiactng;
									public final class Version
									{	
									private final static String NAME  		= "${project.name}";	
									private final static String NUMBER  	= "${project.version}";
									private final static String TIMESTAMP	= "${build.date}";
									
									/**
									*	@return jiac revision name 
									*/
									public static final String getName() { 
									return NAME;
									}
									
									/**
									*	@return jiac revision version 
									*/
									public static final String getNumber() { 
									return NUMBER;
									}
									
									/**
									*	@return jiac revision date 
									*/
									public static final String getTimestamp() { 
									return TIMESTAMP;		
									}
									}
									</echo>	
								</tasks>
							</configuration>
	            		<goals>
	              			<goal>run</goal>
							</goals>
						</execution>
					</executions>
				</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<additionalClasspathElements>
						<additionalClasspathElement>${basedir}</additionalClasspathElement>
						</additionalClasspathElements>
					</configuration>
				</plugin>
			
			</plugins>		
		</build>
	</project>