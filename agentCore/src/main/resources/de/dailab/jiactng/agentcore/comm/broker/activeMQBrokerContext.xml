<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for creating an ActiveMQ Broker with default properties
-->
<beans>

	<!--
		- For getting an appropriate Broker just get this Bean
	-->
	<bean name="activeMQBroker" class="de.dailab.jiactng.agentcore.comm.broker.ActiveMQBroker" abstract="true">
		<property name="jmx" value="true" />
		<property name="discoveryAddress" value="239.255.2.45:5555" />
		<property name="discoveryMethod" value="multicast" />
		<property name="persistent" value="false" />
		<property name="connectors">
			<set>
				<value type="java.lang.String">tcp://localhost:61616</value>
			</set>
		</property>
	</bean>
</beans>

