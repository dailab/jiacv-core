<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for creating an ActiveMQ Broker with default properties
-->
<beans>

	<!--
		- For getting an appropriate Broker just get this Bean
	-->
	<bean name="activeMQBroker"
		class="de.dailab.jiactng.agentcore.comm.broker.ActiveMQBroker"
		singleton="true">
		<property name="jmx" value="true"></property>
		<property name="discoveryAddress" value="239.255.2.45:5555"></property>
		<property name="discoveryMethod" value="multicast"></property>
		<property name="brokerName" value="PlatformBroker"></property>
		<property name="persistent" value="false"> </property>
		<!-- property name="urlList">
			<set>
				<value type= "java.lang.String">"tcp://localhost:61616"</value>
			</set>
		</property -->
	</bean>

	<bean name="amqConnectionFactory"
		class="org.apache.activemq.spring.ActiveMQConnectionFactory"
		singleton="false">
		
		<property name="brokerURL" value="vm://PlatformBroker"></property>
	</bean>

</beans>

