<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
  - Application context definition for "example" DispatcherServlet.
  -->
<beans>

  <bean name="Agent" class="de.dailab.jiactng.agentcore.Agent">
    <property name="memory"><ref bean="memory"/></property>
    <property name="adaptors">
      <list>
        <ref bean="pingPong"/>
        <ref bean="monitor"/>
      </list>
    </property>
  </bean>

  <bean name="Agent2" class="de.dailab.jiactng.agentcore.Agent">
    <property name="memory"><ref bean="memory"/></property>
    <property name="adaptors">
      <list>
        <ref bean="pongPing"/>
      </list>
    </property>
  </bean>

  <bean name="memory" class="de.dailab.jiactng.agentcore.knowledge.Memory">
    <property name="timeOut" value="-1"/>
  </bean>

  <bean name="monitor" class="de.dailab.jiactng.agentcore.knowledge.MemoryMonitor">
  </bean>

  <bean name="pingPong" class="de.dailab.jiactng.test.ping.PingPongBean" singleton="false">
  </bean>

  <bean name="pongPing" class="de.dailab.jiactng.test.ping.PongPingBean" singleton="false">
  </bean>

</beans>
