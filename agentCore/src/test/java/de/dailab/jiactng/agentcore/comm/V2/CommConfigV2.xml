<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:amq="http://activemq.org/config/1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean name="myPlatform"
		class="de.dailab.jiactng.agentcore.SimpleAgentNode">
		<property name="embeddedBroker" ref="embeddedBroker" />
		<property name="agents">
			<list>
				<ref bean="TestAgentX" />
				<ref bean="TestAgentY" />
				<ref bean="PlatformAgent" />
			</list>
		</property>
	</bean>


	<bean name="TestAgentX" class="de.dailab.jiactng.agentcore.Agent"
		singleton="false">
		<property name="memory">
			<ref bean="memory" />
		</property>
		<property name="execution">
			<ref bean="simpleExecCycle" />
		</property>
		<property name="adaptors">
			<list>
				<!--ref bean="dummyBean"/-->
				<ref bean="commBean1" />
				<ref bean="monitor" />
				<ref bean="agentCommBeanGui1" />
			</list>
		</property>
	</bean>

	<bean name="TestAgentY" class="de.dailab.jiactng.agentcore.Agent"
		singleton="false">
		<property name="memory">
			<ref bean="memory" />
		</property>
		<property name="execution">
			<ref bean="simpleExecCycle" />
		</property>
		<property name="adaptors">
			<list>
				<!--ref bean="dummyBean"/-->
				<ref bean="commBean2" />
				<ref bean="monitor" />
				<ref bean="agentCommBeanGui2" />
			</list>
		</property>
	</bean>

	<bean name="PlatformAgent" class="de.dailab.jiactng.agentcore.Agent"
		singleton="false">
		<property name="memory">
			<ref bean="memory" />
		</property>
		<property name="execution">
			<ref bean="simpleExecCycle" />
		</property>
		<property name="adaptors">
			<list>
				<!--ref bean="dummyBean"/-->
				<ref bean="platformCommBean" />
				<ref bean="monitor" />
				<ref bean="platformCommBeanGui" />
			</list>
		</property>
	</bean>
	
	<bean id="commBean1"
		class="de.dailab.jiactng.agentcore.comm.CommBean" init-method="springInit">
		<property name="defaultTopicName" value="InterAgentTopic" />
		<property name="defaultQueueName" value="Bean1" />	
		<property name="connectionFactory" ref="connectionFactory" />			
	</bean>

	<bean id="commBean2"
		class="de.dailab.jiactng.agentcore.comm.CommBean" init-method="springInit">
		<property name="defaultTopicName" value="InterAgentTopic" />
		<property name="defaultQueueName" value="Bean2" />	
		<property name="connectionFactory" ref="connectionFactory" />			
	</bean>

	<bean id="platformCommBean"
		class="de.dailab.jiactng.agentcore.comm.CommBean" init-method="springInit">
		<property name="defaultTopicName" value="JiacTngTopic" />
		<property name="defaultQueueName" value="Bean2" />	
		<property name="connectionFactory" ref="connectionFactory" />			
	</bean>
	
	<!-- das Gui Frontend für die commbean-->
	<bean id="agentCommBeanGui1"
		class="de.dailab.jiactng.agentcore.comm.V2.TestPlatformCommunication">
		<property name="commBean">
			<ref bean="commBean1" />
		</property>
	</bean>
	
	<!-- das Gui Frontend für die commbean-->
	<bean id="agentCommBeanGui2"
		class="de.dailab.jiactng.agentcore.comm.V2.TestPlatformCommunication">
		<property name="commBean">
			<ref bean="commBean2" />
		</property>
	</bean>	

	<!-- das Gui Frontend für die commbean-->
	<bean id="platformCommBeanGui"
		class="de.dailab.jiactng.agentcore.comm.V2.CommMonitorBean" init-method="springInit">
		<property name="platformCommBean">
			<ref bean="platformCommBean" />
		</property>
		<property name="commBeanList">
			<list>
				<!--ref bean="dummyBean"/-->
				<ref bean="commBean2" />
				<ref bean="commBean1" />
			</list>
		</property>
	</bean>	

	<bean id="connectionFactory"
		class="org.apache.activemq.ActiveMQConnectionFactory" />

	<bean id="embeddedBroker"
		class="de.dailab.jiactng.agentcore.comm.JmsBrokerAMQ"
		init-method="springStart" destroy-method="springStop">
		<property name="values">
			<ref bean="brokerValues" />
		</property>
	</bean>

	<bean id="brokerValues"
		class="de.dailab.jiactng.agentcore.comm.BrokerValues">
		<property name="name" value="JiacTngBroker" />
		<property name="url" value="tcp://localhost:61616" />
		<property name="jmx" value="true" />
		<property name="discoveryMethod" value="multicast" />
		<property name="discoveryAddress" value="239.255.2.45:5555" />
		<property name="persistent" value="false" />
	</bean>

	<bean name="memory"
		class="de.dailab.jiactng.agentcore.knowledge.Memory"
		singleton="false" />

	<bean name="monitor"
		class="de.dailab.jiactng.agentcore.knowledge.MemoryMonitor"
		singleton="false" />

	<bean name="pingBean"
		class="de.dailab.jiactng.agentcore.communication.PingAgentBean"
		singleton="false" />

	<bean name="pingBean"
		class="de.dailab.jiactng.agentcore.communication.PingAgentBean"
		singleton="false" />

	<bean name="simpleExecCycle"
		class="de.dailab.jiactng.agentcore.SimpleExecutionCycle"
		singleton="false" />

</beans>
