<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for "example" DispatcherServlet.
-->
<beans>

	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

	<bean name="myPlatform" parent="Platform">
		<property name="agents">
			<list>
				<ref bean="TestAgent" />
			</list>
		</property>
	</bean>


	<bean name="TestAgent" parent="SimpleAgent">
		<property name="agentBeans">
			<list>
				<ref bean="dummyBean" />
			</list>
		</property>
	</bean>

	<bean name="dummyBean" class="de.dailab.jiactng.agentcore.DummyBean"
		singleton="false">
		<property name="executeInterval" value="500"/>
	</bean>

</beans>
