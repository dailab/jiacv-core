<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for "example" DispatcherServlet.
-->
<beans>

	<bean name="myPlatform"
		class="de.dailab.jiactng.agentcore.SimpleAgentNode">
		<property name="agents">
			<list>
				<ref bean="TestAgent" />
			</list>
		</property>
	</bean>


	<bean name="TestAgent" class="de.dailab.jiactng.agentcore.Agent"
		singleton="false">
		<property name="memory">
			<ref bean="memory" />
		</property>
		<property name="execution">
			<ref bean="simpleExecCycle" />
		</property>
		<property name="agentBeans">
			<list>
				<ref bean="dummyBean" />
			</list>
		</property>
	</bean>

	<!--bean name="Agent2" class="de.dailab.jiactng.agentcore.Agent">
		<property name="memory"><ref bean="memory"/></property>
		<property name="agentBeans">
		<list>
		<ref bean="pongPing"/>
		</list>
		</property>
		</bean-->

	<bean name="memory"
		class="de.dailab.jiactng.agentcore.knowledge.Memory"
		singleton="false">
		<!--property name="timeOut" value="-1"/-->
	</bean>

	<!-- bean name="helloBean" class="de.dailab.jiactng.test.helloworld.HelloBean" singleton="false">
		</bean-->

	<bean name="dummyBean" class="de.dailab.jiactng.agentcore.DummyBean"
		singleton="false">
	</bean>

	<bean name="simpleExecCycle"
		class="de.dailab.jiactng.agentcore.SimpleExecutionCycle"
		singleton="false">
	</bean>

</beans>
