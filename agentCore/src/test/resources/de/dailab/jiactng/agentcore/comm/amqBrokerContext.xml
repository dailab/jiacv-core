<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for creating an ActiveMQ Broker with default properties
-->
<beans>

	<!--
		- For getting an appropriate Broker just get this Bean
	-->
	<bean name="amqBroker"
		class="de.dailab.jiactng.agentcore.comm.broker.JmsBrokerAMQ"
		singleton="true">
		<property name="values">
			<ref bean="BrokerValues" />
		</property>
	</bean>

	<bean name="BrokerValues"
		class="de.dailab.jiactng.agentcore.comm.broker.BrokerValues">
		<property name="jmx" value="true"></property>
		<property name="discoveryAddress" value="239.255.2.45:5555"></property>
		<property name="discoveryMethod" value="multicast"></property>
		<property name="url" value="tcp://localhost:61616"></property>
		<property name="name" value="PlatformBroker"></property>
	</bean>

</beans>