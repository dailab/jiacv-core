<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for usage within CommunicationBean related tests and examples 
-->
<beans>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentBeans.xml"/>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml"/>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml"/>

	<bean name="CommunicationPlatform" parent="Platform">
		<property name="loggingConfig" value="classpath:de/dailab/jiactng/agentcore/comm/communicationTestLog4j.properties"/>
		<property name="agentNodeBeans">
			<list>
				<ref bean="StandardJMSBroker"/>
			</list>
		</property>
		<property name="agents">
			<list>
				<ref bean="Communicator" />
			</list>
		</property>
	</bean>

	<bean name="Communicator" parent="SimpleAgent" singleton="false">
		<property name="agentBeans">
			<list>
				<ref bean="CommunicationBean" />
			</list>
		</property>
	</bean>
</beans>
