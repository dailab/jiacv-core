<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for "example" Ping-Pong Scenario
-->
<beans>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentBeans.xml"/>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml"/>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml"/>
	
	<bean name="PingPongNode" parent="Node">
		<property name="loggingConfig" value="classpath:de/dailab/jiactng/agentcore/comm/jms/pingpongLog4j.properties"/>
		<property name="agentNodeBeans">
			<list>
				<ref bean="LocalJMSBroker"/>
			</list>
		</property>
		<property name="agents">
			<list>
				<ref bean="Pinger" />
				<ref bean="Ponger" />
			</list>
		</property>
	</bean>
	
	<bean name="LocalJMSBroker" parent="ActiveMQBroker" singleton="true"/>
	
	<bean name="Pinger" parent="SimpleAgent" singleton="false">
		<property name="agentBeans">
			<list>
				<ref bean="PingerBean" />
			</list>
		</property>
	</bean>

	<bean name="Ponger" parent="SimpleAgent" singleton="false">
		<property name="agentBeans">
			<list>
				<ref bean="PongerBean" />
			</list>
		</property>
	</bean>

	<bean name="PongerBean" class="de.dailab.jiactng.agentcore.comm.jms.PongerBean" singleton="false" />
	<bean name="PingerBean" class="de.dailab.jiactng.agentcore.comm.jms.PingerBean" singleton="false" />
</beans>
