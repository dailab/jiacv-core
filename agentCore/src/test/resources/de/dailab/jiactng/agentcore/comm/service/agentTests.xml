<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for "example" DispatcherServlet.
-->
<beans>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentBeans.xml"/>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml"/>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml"/>

	<bean name="ServiceTestPlatform" parent="Platform">
		<property name="loggingConfig" value="classpath:de/dailab/jiactng/agentcore/comm/service/serviceLog4j.properties" />
		<property name="agentNodeBeans">
			<list>
				<ref bean="StandardJMSBroker"/>
			</list>
		</property>
		<property name="agents">
			<list>
				<ref bean="Provider" />
				<ref bean="User" />
			</list>
		</property>
	</bean>

	<bean name="Provider" parent="SimpleAgent" singleton="false">
		<property name="agentBeans">
			<list>
				<ref bean="CommunicationBean" />
				<ref bean="ProviderServiceBean" />
				<ref bean="ProviderBean" />
			</list>
		</property>
	</bean>

	<bean name="User" parent="SimpleAgent" singleton="false">
		<property name="agentBeans">
			<list>
				<ref bean="CommunicationBean" />
				<ref bean="ClientServiceBean" />
				<ref bean="ClientBean" />
			</list>
		</property>
	</bean>

	<bean name="ClientBean" class="de.dailab.jiactng.agentcore.comm.service.ClientBean" singleton="false" />
	<bean name="ClientServiceBean" parent="AbstractServiceBean"/>

	<bean name="AbstractServiceBean" class="de.dailab.jiactng.agentcore.comm.service.ServiceBean" abstract="true">
		<property name="executeInterval" value="1000"/>
	</bean>

	<bean name="ProviderBean" class="de.dailab.jiactng.agentcore.comm.service.ProviderBean" singleton="false" />
	<bean name="ProviderServiceBean" parent="AbstractServiceBean">
		<property name="actionTemplates">
			<set>
				<bean class="de.dailab.jiactng.agentcore.action.Action" singleton="false">
					<property name="providerBean">
						<ref bean="ProviderBean" />
					</property>
				</bean>
			</set>
		</property>
	</bean>
</beans>
