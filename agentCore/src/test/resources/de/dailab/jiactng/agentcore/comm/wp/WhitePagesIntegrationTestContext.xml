<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context for the white pages integration testcase
-->
<beans>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentBeans.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/JMSMessaging.xml" />

	<bean name="WhitePagePlatform" parent="Platform">
		<property name="loggingConfig"
			value="classpath:de/dailab/jiactng/agentcore/comm/communicationTestLog4j.properties" />
		<property name="agents">
			<list>
				<ref bean="WhitePagesAgent" />
				<ref bean="FindMeAgent"/>
			</list>
		</property>
		<property name="agentNodeBeans">
			<list>
				<ref bean="WhitePagesTestJMSBroker" />
				<ref bean="DirectoryAgentNodeBean"/>
			</list>
		</property>
	</bean>

	<bean name="RemoteWhitePagePlatform" parent="Platform">
		<property name="loggingConfig"
			value="classpath:de/dailab/jiactng/agentcore/comm/communicationTestLog4j.properties" />
		<property name="agents">
			<list>
				<ref bean="RemoteAgentOnOtherNode" />
			</list>
		</property>
		<property name="agentNodeBeans">
			<list>
				<ref bean="DirectoryAgentNodeBean" />
			</list>
		</property>
	</bean>


	<bean name="WhitePagesAgent" parent="SimpleAgent" singleton="false">
		<property name="agentBeans">
			<list>
				<ref bean="CommunicationBean" />
				<ref bean="DirectoryAccessBean" />
				<ref bean="WhitePagesTestBean" />
				<ref bean="RemoteActionTestBean"/>
			</list>
		</property>
	</bean>
	
	<bean name="FindMeAgent" parent="SimpleAgent" singleton="false">
	<property name="agentBeans">
		<list>
			<ref bean="CommunicationBean"/>
			<ref bean="DirectoryAccessBean"/>
			<ref bean="RemoteActionProviderBean"/>
		</list>
	</property>
	</bean>
	
	<bean name="RemoteAgentOnOtherNode" parent="SimpleAgent" singleton="false">
		<property name="agentBeans">
			<list>
				<ref bean="CommunicationBean" />
				<ref bean="DirectoryAccessBean" />
				<ref bean="GlobalRemoteActionProviderBean" />
			</list>
		</property>
	</bean>
	
	
	<bean name="WhitePagesTestBean" class="de.dailab.jiactng.agentcore.comm.wp.WhitePagesTestBean" singleton="false">
	</bean>
	
	<bean name="RemoteActionTestBean" class="de.dailab.jiactng.agentcore.comm.wp.RemoteActionTestBean" singleton="false">
	</bean>
	
	<bean name="RemoteActionProviderBean" class="de.dailab.jiactng.agentcore.comm.wp.RemoteActionProviderBean" singleton="false">
	</bean>
	
	<bean name="GlobalRemoteActionProviderBean" class="de.dailab.jiactng.agentcore.comm.wp.GlobalRemoteActionProviderBean" singleton="false">
	</bean>
	
	<!-- 
		The special JMS Broker.
		It has a standard TCP connector
	-->
	<bean name="WhitePagesTestJMSBroker" parent="ActiveMQBroker" singleton="true" lazy-init="true">	
	</bean>
	
</beans>