<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for "example" DispatcherServlet.
-->
<beans>

	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

	<bean name="SessionTestNode" parent="NodeWithDirectory">
		<property name="agents">
			<list>
				<ref bean="SessionTestAgent1" />
				<ref bean="SessionTestAgent2" />
			</list>
		</property>
	</bean>


	<bean name="SessionTestAgent1" parent="NonBlockingAgent" singleton="false">
		<property name="agentBeans">
			<list>
			    <ref bean="CommunicationBean" />
				<ref bean="SessionTestBean1" />
			</list>
		</property>
	</bean>

	<bean name="SessionTestAgent2" parent="NonBlockingAgent" singleton="false">
		<property name="agentBeans">
			<list>
			    <ref bean="CommunicationBean" />
				<ref bean="SessionTestBean2" />
			</list>
		</property>
	</bean>

	<bean name="SessionTestBean1" class="de.dailab.jiactng.agentcore.execution.SessionTestBean"	singleton="false">
		<property name="waitTimer" value="1000"/>
		<property name="offerActionA" value="true"/>
		<property name="offerActionB" value="true"/>
		<property name="offerActionC" value="false"/>
	</bean>

	<bean name="SessionTestBean2" class="de.dailab.jiactng.agentcore.execution.SessionTestBean"	singleton="false">
		<property name="waitTimer" value="1000"/>
		<property name="offerActionA" value="false"/>
		<property name="offerActionB" value="false"/>
		<property name="offerActionC" value="true"/>	
	</bean>

</beans>
