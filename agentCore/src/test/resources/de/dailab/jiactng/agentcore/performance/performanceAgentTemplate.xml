<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for usage within CommunicationBean related tests and examples 
-->
<beans>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml"/>
	
	<bean name="PerformanceAgentTemplate" parent="SimpleAgent" abstract="true">
      <property name="agentBeans">
	    <list>
		  <ref bean="testBean" />
        </list>
	  </property>
	</bean>
	
	<bean name="testBean"
		class="de.dailab.jiactng.agentcore.action.ExampleExposingBean"
		singleton="false">
	</bean>
</beans>
