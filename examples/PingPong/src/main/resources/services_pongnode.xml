<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p" xmlns:aop="http://www.springframework.org/schema/aop" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee" xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">


	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

	<bean name="PongNode" parent="NodeWithJMX">
		<property name="agents">
			<list>
				<ref bean="PongAgent" />
			</list>
		</property>
	</bean>

	<bean name="PongAgent" parent="SimpleAgent" abstract="false">
		<property name="agentBeans">
			<list>
				<bean name="Pong" class="de.dailab.jiactng.examples.pingpong.services.PongServiceAgentBean">
					<property name="logLevel" value="info" />
				</bean>
			</list>
		</property>
	</bean>

</beans>
