<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for usage within CommunicationBean related tests and examples 
-->
<beans>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml"/>
	
	<bean name="chatAgentTemplate" parent="SimpleAgent" abstract="true">
		<!-- property name="execution" ref="FakeExecutionCycle" / -->
		<property name="agentBeans">
			<list>
				<ref bean="CommunicationBean" />
				<ref bean="chatGUIBean" />
			</list>
		</property>
	</bean>
	
	<bean name="chatGUIBean" class="de.dailab.jiactng.examples.chat.ChatGuiBean" singleton="false" />
	<bean name="FakeExecutionCycle" class="de.dailab.jiactng.examples.chat.FakeExecutionCycle" singleton="false"/>
</beans>
