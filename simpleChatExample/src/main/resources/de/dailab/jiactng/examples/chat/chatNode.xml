<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for usage within CommunicationBean related tests and examples 
-->
<beans>
	<import resource="classpath:de/dailab/jiactng/agentcore/comm/broker/activeMQBrokerContext.xml" />

	<bean name="CommunicationPlatform" class="de.dailab.jiactng.agentcore.SimpleAgentNode">
		<property name="agentNodeBeans">
			<list>
				<ref bean="ChatBroker"/>
			</list>
		</property>
	</bean>

	<bean name="ChatBroker" parent="activeMQBroker" singleton="true"/>
</beans>