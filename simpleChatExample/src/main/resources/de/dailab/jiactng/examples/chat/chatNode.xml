<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!--
	- Application context definition for usage within CommunicationBean related tests and examples 
-->
<beans>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/JMSMessaging.xml" />

	<bean name="CommunicationPlatform" parent="PlatformWithJMX">
		<property name="agentNodeBeans">
			<list>
				<ref bean="FanzyBroker" />
			</list>
		</property>
	</bean>

	<bean name="FanzyBroker" parent="ActiveMQBroker" singleton="true">
		<property name="connectors">
			<set>
				<ref bean="FanzyConnector" />
			</set>
		</property>
	</bean>

	<bean name="FanzyConnector" parent="ActiveMQTransportConnector" singleton="true">
		<property name="transportURI" value="tcp://localhost:0" />
		<property name="discoveryURI" value="smartmulticast://simplechat" />
	</bean>
</beans>