<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

	<bean name="ActionTesterNodeTestPlatform" parent="Platform">

		<property name="agents">
			<list>
				<ref bean="LoadReporter" />
			</list>
		</property>

		<property name="agentNodeBeans">
			<list>
				<ref bean="StandardJMSBroker" />
				<ref bean="iDirectory" />
			</list>
		</property>

		<property name="jmxConnectors">
			<set>
				<map>
					<entry key="protocol" value="rmi" />
				</map>
			</set>
		</property>

		<property name="logLevel" value="WARN" />
	</bean>


	<bean name="LoadReporter" parent="NonBlockingAgent">
		<property name="agentBeans">
			<list>
				<ref bean="LoadReporterMethodExposingBean" />
				<ref bean="CommunicationBean" />
			</list>
		</property>
	</bean>

	<bean name="LoadReporterMethodExposingBean"
		class="de.dailab.ccact.loadreporter.LoadReporterMethodExposingBean"
		singleton="false">
		<property name="logLevel" value="WARN" />
		<property name="registeredActions">
			<set>
				<value>relativeLoadAction</value>
			</set>
		</property>
	</bean>

	<bean name="iDirectory"
		class="de.dailab.jiactng.agentcore.directory.DirectoryAgentNodeBean"
		singleton="false">
		<property name="messageTransport">
			<ref bean="StandardJMSMessageTransport" />
		</property>
	</bean>


</beans>
